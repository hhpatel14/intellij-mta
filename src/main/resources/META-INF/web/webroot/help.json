{
    "options": [{
            "name": "name",
            "description": "The name of this configuration.",
            "type": "String",
            "ui-type": ["single"],
            "required": true
        },
        {
            "name": "input",
            "description": "Input file or directory (directory is required for source mode). Note: Select only one PATH at a time.",
            "type": "Path",
            "ui-type": ["many", "file_or_directory", "text"],
            "placeholder": "No Files or Directories Specified",
            "required": true,
            "editable": true
        },
        {
            "name": "target",
            "description": "The target server/technology/framework to migrate to. This could include multiple items (eg, \"eap7\" and \"cloud-readiness\"). NOTE: The analysis will fail if a custom target is added and cannot be found within custom rules.",
            "type": "String",
            "ui-type": ["select-many", "text"],
            "required": true,
            "available-options": [
                "azure-appservice",
                "cloud-readiness",
                "jbpm",
                "quarkus",
                "discovery",
                "drools",
                "fsw",
                "eap7",
                "eap8",
                "hibernate",
                "java-ee",
                "fuse",
                "openjdk",
                "jakarta-ee",
                "jws6",
                "eap",
                "camel",
                "linux",
                "hibernate-search",
                "resteasy",
                "rhr",
                "eapxp",
                "openjdk11",
                "openjdk17",
                "openjdk21",
                "openliberty"
            ],
            "editable": true
        },
        {
            "name": "source-only",
            "description": "Indicates whether analysis mode. Must be one of 'full' or 'source-only' (Default: full).",
            "type": "Boolean",
            "ui-type": ["single"],
            "required": false
        },
        {
            "name": "analyze-known-libraries",
            "description": "Analyze known open-source libraries.",
            "type": "Boolean",
            "ui-type": ["single"],
            "required": false
        },
        {
            "name": "overwrite",
            "description": "Force overwrite of the output directory, without prompting.",
            "type": "Boolean",
            "ui-type": ["single"],
            "required": false
        },
        {
            "name": "output",
            "description": "The location of the generated analysis results.",
            "type": "String",
            "ui-type": ["single"],
            "required": true,
            "disabled": true
        }
    ]
}